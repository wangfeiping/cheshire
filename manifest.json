{
    "manifest_version": 0,
    "name": "Your Extension Name",
    "version": "1.0",
    "description": "Description of your extension",
    "icons": {
        "16": "path/to/16x16/icon.png",
        "48": "path/to/48x48/icon.png",
        "128": "path/to/128x128/icon.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "path/to/16x16/icon.png",
            "48": "path/to/48x48/icon.png",
            "128": "path/to/128x128/icon.png"
        },
        "default_popup": "path/to/popup.html"
    },
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": [
            "path/to/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "path/to/content_script.js"
            ]
        }
    ]
}