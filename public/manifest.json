{
    "name": "Cheshire Cat",
    "version": "1.0",
    "description": "This extension is made for demonstration purposes",
    "manifest_version": 2,
    "permissions": [
       "activeTab",
       "scripting"
    ],
    "browser_action": {
       "default_title": "Cheshire Cat",
       "default_popup": "popup.html"
    },
    "background": {
       "persistent": false,
       "scripts": [ "./js/background.js" ]
    }
 }

